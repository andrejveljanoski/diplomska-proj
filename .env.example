# Database Configuration
# Get your database URL from Neon, Supabase, or your preferred PostgreSQL provider
DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require"

# Authentication
# Generate a secure random string for AUTH_SECRET (e.g., using: openssl rand -base64 32)
AUTH_SECRET="your-secret-key-here"
AUTH_TRUST_HOST=true

# R2 Storage Configuration (Cloudflare R2)
# Create an R2 bucket and generate API tokens from Cloudflare dashboard
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="your-bucket-name"
R2_PUBLIC_URL="https://your-public-url.r2.dev"
